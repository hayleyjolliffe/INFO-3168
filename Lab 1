<!-- STEPS 1 + 2: Setup -->
<html>
	<head>
		<title>Lab 1 â€” Hayley Jolliffe</title>
		<script>

			// STEP 3: Creating VIDEOTYPE CONSTRUCTOR
			var VideoType = function(title,category,cast,price)
			{
				this.title = title;					// String, "Title"
				this.category = category;			// String, "Genre"
				this.cast = cast;					// String Array, "Cast"
				this.price = price;					// Number, "Price"
				// STEP 4: Initializing numbers to 0
				this.numRents = 0;					// Number, "Rents"
				this.vidRevenue = 0;				// Number, "Revenue"
				// STEP 6: Creating PROCRENTAL
				this.procRental = function()
				{
					// Processing total rentals
					this.numRents++;

					// Processing single revenues
					this.vidRevenue += this.price;

					// Processing total revenue
					VideoType.prototype.totRevenue += this.price;
				}
			}

			// STEP 5: Creating PROTOTYPE
			VideoType.prototype.totRevenue = 0;

			// STEP 7 - 1: Creating ONLOAD FUNCTION
			function StartMeUp()
			{
				// STEP 7 - 2: Creating VIDEOS ARRAY
				var videos = [];

				// STEPS 8 + 9: Injecting sample data into ARRAY
				// Rogue One
				videos.push('Rogue One', 'Sci-Fi', ['Felicity Jones', '<br>', 'Mads Mikkelson', '<br>', 'Riz Ahmed'], 17.95);

				// Arrival
				videos.push('Arrival', 'Sci-Fi', ['Amy Adams', '<br>', 'Jeremy Renner'], 17.95);

				// No Time to Die
				videos.push('No Time to Die', 'Adventure', ['Daniel Craig', '<br>', 'Lea Seydoux', '<br>', 'Rami Malek', '<br>', 'Lashana Lynch'], 28.95);


				// STEP 10: Creating FOR LOOP
				for (var i  = 0; i <= 5; i++)
				{
					for (var p = 0; p < videos.length; p++)
					{
						VideoType.procRental();
						// STEP 11: Output
						document.write(
							videos[p].title + ", " + 
							videos[p].category + ", " + 
							videos[p].price + ", " + 
							videos[p].numRents + ", " + 
							videos[p].vidRevenue + "<br> Cast: <br>" + 
							videos[p].cast + "<br><br>"
						);
						break;
					}
				}
			}

			// STEP 11 - 2: Output
			// Total Revenue
			document.write(
				"Total Rental Revenue: $" +
				VideoType.prototype.totRevenue.toFixed(2)
			);

		</script>
	</head>

	<!-- STEP 7 - 2: ONLOAD Event Handler -->
	<body onload="StartMeUp()">

	</body>
</html>
